            android:exported="false"/>
        <activity android:name=".pronunciationTest.PronunciationTestDoing"
            android:exported="false"/>
        <activity android:name=".pronunciationTest.PronunciationAnalysis"
            android:exported="false"/>
        <activity android:name=".lipReading.CameraTest"
            android:exported="false"/>

        <activity
            android:name=".lipReading.LipReading"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>