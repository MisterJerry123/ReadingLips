<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mypage.myInformation.AccountDeleteDialogFragment"
    >

 <TextView
     android:id="@+id/tv_delete_account_indicator"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="20dp"

     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     android:layout_marginBottom="20dp"
     app:layout_constraintBottom_toTopOf="@id/tv_delete_account_explain"
     android:text="회원탈퇴"
     android:textSize="15sp"
     android:textColor="#757575"
     android:fontFamily="@font/pretendardregular"
     />
    <TextView
        android:id="@+id/tv_delete_account_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정말 탈퇴하실 건가요?\n탈퇴 이후 계정 복구는 어렵습니다"
        android:lineSpacingExtra="5dp"
        android:textSize="15sp"
        android:fontFamily="@font/pretendardregular"
        app:layout_constraintTop_toBottomOf="@id/tv_delete_account_indicator"
        app:layout_constraintBottom_toTopOf="@id/iv_icon_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"

        />

    <ImageView
        android:id="@+id/iv_icon_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_delete_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_delete_account_explain" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_leave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendardregular"
        android:textSize="15sp"
        android:textColor="#858585"
        android:text="떠나기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_no_leave"
        android:background="#0000"
        android:layout_marginBottom="20dp"

        />
<!--    떠나기 버튼과 아니요 버튼 사이에 나누는 divider 추가-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_no_leave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_leave"
        android:background="#0000"
        android:fontFamily="@font/pretendardregular"
        android:textSize="15sp"
        android:text="아니요"
        android:textColor="#FF0000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"


        />

    





</androidx.constraintlayout.widget.ConstraintLayout>