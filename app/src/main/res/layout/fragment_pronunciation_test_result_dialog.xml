<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pronunciationTest.PronunciationTestLoadingFragmentDialog"
    android:paddingHorizontal="30dp"
    android:paddingTop="50dp"
    >
    <TextView
        android:id="@+id/tv_original_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="원래 문장"
        app:layout_constraintBottom_toTopOf="@id/tv_original_text_indicator"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"

        />
    <TextView
        android:id="@+id/tv_original_text_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="간장공장공장장"
        app:layout_constraintBottom_toTopOf="@id/tv_result_string_title"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"


        />
    <TextView
        android:id="@+id/tv_result_string_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="발음 분석 결과"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/tv_result_string_indicator"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_result_string_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="갼장공장공장장"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/tv_pronunciation_accuarcy_indicator"
        app:layout_constraintStart_toStartOf="parent"

        />



    <TextView
      android:id="@+id/tv_pronunciation_accuarcy_indicator"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="발음 정확도 : 99%"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:textSize="30sp"


      />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        android:text="처음화면으로 이동"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
